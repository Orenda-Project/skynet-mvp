# Application Settings
APP_NAME=SkyNet
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Database - Supabase PostgreSQL
# Get these from your Supabase project: Settings â†’ Database
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_PUBLISHABLE_KEY=your_supabase_publishable_key_here

# Note: Neo4j removed - using PostgreSQL for all data storage

# OpenAI API (for synthesis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_SYNTHESIS=gpt-4-turbo-preview
OPENAI_MODEL_EXTRACTION=gpt-4-mini

# Soniox API (for transcription)
# SONIOX_API_KEY=your_soniox_api_key_here
# For MVP, we'll use OpenAI Whisper as fallback
WHISPER_MODEL=whisper-1

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=noreply@skynet.ai
SMTP_FROM_NAME=SkyNet

# Meeting Bot Configuration (for future)
# ZOOM_CLIENT_ID=your_zoom_client_id
# ZOOM_CLIENT_SECRET=your_zoom_client_secret
# TEAMS_CLIENT_ID=your_teams_client_id
# TEAMS_CLIENT_SECRET=your_teams_client_secret

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your_secret_key_here_min_32_characters_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (for frontend integration)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
